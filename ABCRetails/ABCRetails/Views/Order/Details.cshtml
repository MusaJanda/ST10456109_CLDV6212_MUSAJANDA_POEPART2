@model ABCRetails.Models.Order
@{
    ViewData["Title"] = "Order Details";
}

<style>
    .details-container {
        max-width: 900px;
        margin: 0 auto;
    }

    .details-header {
        background: var(--card-bg);
        border-radius: 20px;
        padding: 2rem;
        margin-bottom: 2rem;
        border: 1px solid var(--border-color);
        text-align: center;
    }

        .details-header h2 {
            font-size: 2rem;
            font-weight: 700;
            background: linear-gradient(135deg, var(--primary-color), var(--secondary-color));
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            margin-bottom: 1rem;
        }

    .order-id-large {
        font-family: 'Courier New', monospace;
        background: rgba(99, 102, 241, 0.1);
        padding: 0.75rem 1.5rem;
        border-radius: 12px;
        font-weight: 600;
        color: var(--primary-color);
        display: inline-block;
    }

    .details-card {
        background: var(--card-bg);
        border-radius: 20px;
        padding: 2rem;
        border: 1px solid var(--border-color);
        margin-bottom: 1.5rem;
    }

    .detail-row {
        display: grid;
        grid-template-columns: 200px 1fr;
        gap: 1rem;
        padding: 1rem 0;
        border-bottom: 1px solid var(--border-color);
    }

        .detail-row:last-child {
            border-bottom: none;
        }

    .detail-label {
        color: var(--text-secondary);
        font-weight: 600;
        display: flex;
        align-items: center;
        gap: 0.5rem;
    }

    .detail-value {
        color: var(--text-primary);
        font-weight: 500;
        font-size: 1.1rem;
    }

    .status-badge-large {
        padding: 0.75rem 2rem;
        border-radius: 50px;
        font-weight: 700;
        font-size: 1rem;
        display: inline-block;
    }

    .back-button {
        background: rgba(99, 102, 241, 0.2);
        border: none;
        border-radius: 12px;
        padding: 0.75rem 1.5rem;
        font-weight: 600;
        color: var(--primary-color);
        transition: all 0.3s ease;
        text-decoration: none;
        display: inline-block;
    }

        .back-button:hover {
            background: var(--primary-color);
            color: white;
            transform: translateX(-5px);
        }
</style>

<div class="details-container">
    <div class="mb-3">
        <a asp-action="Index" class="back-button">
            <i class="fas fa-arrow-left me-2"></i> Back to Orders
        </a>
    </div>

    <div class="details-header">
        <h2><i class="fas fa-file-invoice me-2"></i> Order Details</h2>
        <div class="order-id-large">@Model.OrderId</div>
    </div>

    <div class="details-card">
        <h4 style="color: var(--text-primary); margin-bottom: 1.5rem;">
            <i class="fas fa-info-circle me-2"></i> Order Information
        </h4>

        <div class="detail-row">
            <div class="detail-label">
                <i class="fas fa-calendar"></i> Order Date
            </div>
            <div class="detail-value">@Model.OrderDate.ToString("dddd, MMMM dd, yyyy")</div>
        </div>

        <div class="detail-row">
            <div class="detail-label">
                <i class="fas fa-signal"></i> Status
            </div>
            <div class="detail-value">
                <span class="status-badge-large" style="background: @(Model.Status == "Completed" ? "rgba(16, 185, 129, 0.2)" : Model.Status == "Processing" ? "rgba(251, 191, 36, 0.2)" : Model.Status == "Submitted" ? "rgba(59, 130, 246, 0.2)" : "rgba(239, 68, 68, 0.2)"); color: @(Model.Status == "Completed" ? "#10b981" : Model.Status == "Processing" ? "#fbbf24" : Model.Status == "Submitted" ? "#60a5fa" : "#ef4444");">
                    @Model.Status
                </span>
            </div>
        </div>

        <div class="detail-row">
            <div class="detail-label">
                <i class="fas fa-user"></i> Customer Username
            </div>
            <div class="detail-value">@Model.Username</div>
        </div>

        <div class="detail-row">
            <div class="detail-label">
                <i class="fas fa-box"></i> Product
            </div>
            <div class="detail-value">@Model.ProductName</div>
        </div>

        <div class="detail-row">
            <div class="detail-label">
                <i class="fas fa-sort-numeric-up"></i> Quantity
            </div>
            <div class="detail-value">@Model.Quantity</div>
        </div>

        <div class="detail-row">
            <div class="detail-label">
                <i class="fas fa-dollar-sign"></i> Total Price
            </div>
            <div class="detail-value" style="color: var(--accent-color); font-size: 1.5rem; font-weight: 700;">
                @Model.TotalPrice.ToString("C")
            </div>
        </div>
    </div>

    <div class="d-flex gap-2">
        <a asp-action="Edit" asp-route-id="@Model.RowKey" class="btn btn-primary" style="background: linear-gradient(135deg, var(--primary-color), var(--primary-dark)); border: none; border-radius: 12px; padding: 0.75rem 1.5rem;">
            <i class="fas fa-edit me-2"></i> Edit Order
        </a>
        <a asp-action="Index" class="btn btn-secondary" style="background: rgba(239, 68, 68, 0.2); border: 2px solid rgba(239, 68, 68, 0.3); border-radius: 12px; padding: 0.75rem 1.5rem; color: #ef4444;">
            <i class="fas fa-times me-2"></i> Cancel
        </a>
    </div>
</div>