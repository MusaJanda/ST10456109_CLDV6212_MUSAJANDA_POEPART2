@{
    ViewData["Title"] = "Contact Us";
}

<div class="container-fluid">
    <div class="text-center mb-5">
        <h1 class="display-4 text-primary">
            <i class="fas fa-phone"></i> Contact Us
        </h1>
        <p class="lead text-secondary">We'd love to hear from you. Get in touch with us today!</p>
    </div>

    <div class="row g-4">
        <!-- Contact Information Section -->
        <div class="col-lg-6">
            <div class="card shadow-sm border-0 h-100">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">
                        <i class="fas fa-info-circle me-2"></i>Contact Information
                    </h4>
                </div>
                <div class="card-body">
                    <!-- Address -->
                    <div class="contact-item mb-4">
                        <h5 class="text-primary">
                            <i class="fas fa-map-marker-alt me-2"></i>Address
                        </h5>
                        <p class="ms-4 mb-0">
                            ABC Retails<br>
                            1809 Chris Hani Rd<br>
                            Klipsruit<br>
                            Soweto, 1862<br>
                            South Africa
                        </p>
                    </div>

                    <!-- Contact Email -->
                    <div class="contact-item mb-4">
                        <h5 class="text-primary">
                            <i class="fas fa-envelope me-2"></i>Email
                        </h5>
                        <p class="ms-4 mb-0">
                            <a href="mailto:info@abcretailers.com" class="text-decoration-none">
                                info@abcretails.com
                            </a>
                        </p>
                        <p class="ms-4 mb-0">
                            <a href="mailto:support@abcretailers.com" class="text-decoration-none">
                                support@abcretails.com
                            </a>
                        </p>
                    </div>

                    <!-- Contact Number -->
                    <div class="contact-item mb-4">
                        <h5 class="text-primary">
                            <i class="fas fa-phone me-2"></i>Phone Numbers
                        </h5>
                        <p class="ms-4 mb-0">
                            <strong>Main:</strong> <a href="tel:+27123456789" class="text-decoration-none">(27) 123456789</a>
                        </p>
                        <p class="ms-4 mb-0">
                            <strong>Support:</strong> <a href="tel:+276551234568" class="text-decoration-none">(27) 651234568</a>
                        </p>
                        <p class="ms-4 mb-0">
                            <strong>Toll Free:</strong> <a href="tel:0111234567" class="text-decoration-none">011-123-4567</a>
                        </p>
                    </div>

                    <!-- Operational Hours -->
                    <div class="contact-item">
                        <h5 class="text-primary">
                            <i class="fas fa-clock me-2"></i>Operational Hours
                        </h5>
                        <ul class="list-unstyled ms-4">
                            <li class="mb-1"><strong>Monday - Friday:</strong> 9:00 AM - 6:00 PM</li>
                            <li class="mb-1"><strong>Saturday:</strong> 10:00 AM - 4:00 PM</li>
                            <li class="mb-1"><strong>Sunday:</strong> 12:00 PM - 4:00 PM</li>
                            <li class="mb-1"><strong>Holidays:</strong> Closed</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>

        <!-- Enquiry Form and Map Section -->
        <div class="col-lg-6">
            <!-- Enquiry Google Form -->
            <div class="card shadow-sm border-0 mb-4">
                <div class="card-header bg-success text-white">
                    <h4 class="mb-0">
                        <i class="fas fa-paper-plane me-2"></i>Send us an Enquiry
                    </h4>
                </div>
                <div class="card-body">
                    <p class="text-muted mb-3">Fill out our enquiry form and we'll get back to you within 24 hours.</p>
                    <!-- Replace this iframe src with your actual Google Form embed URL -->
                    <iframe src="https://docs.google.com/forms/d/e/1FAIpQLSenUlgid0a7gCZqRrf8ofNcyEz8_YzcclfvzsJQaDtelStRDg/viewform?embedded=true" width="640" height="1852" frameborder="0" marginheight="0" marginwidth="0">Loading…</iframe>
                    <small class="text-muted mt-2 d-block">
                        <i class="fas fa-info-circle me-1"></i>
                        Having trouble with the form? Email us directly at
                        <a href="mailto:info@abcretails.com">info@abcretails.com</a>
                    </small>
                </div>
            </div>

            <!-- Google Maps -->
            <div class="card shadow-sm border-0">
                <div class="card-header bg-info text-white">
                    <h4 class="mb-0">
                        <i class="fas fa-map me-2"></i>Find Us
                    </h4>
                </div>
                <div class="card-body p-0">
                    <!-- Replace this iframe src with your actual Google Maps embed URL -->
                    <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3578.1120223001517!2d27.899463176168727!3d-26.258027466169764!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x1e95a750bd156ff3%3A0xdb66c0541f4cec6d!2sMaponya%20Mall!5e0!3m2!1sen!2snl!4v1758108434746!5m2!1sen!2snl" width="600" height="450" style="border:0;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
                            
                </div>
                <div class="card-footer bg-light">
                    <small class="text-muted">
                        <i class="fas fa-map-marker-alt me-1"></i>
                        1809 Chris Hani Rd,   Klipsruit, Soweto, 1862, South Africa
                    </small>
                </div>
            </div>
        </div>
    </div>

    <!-- Additional Contact Options -->
    <div class="row mt-5">
        <div class="col-12">
            <div class="card shadow-sm border-0">
                <div class="card-body text-center py-4">
                    <h4 class="text-primary mb-3">
                        <i class="fas fa-handshake me-2"></i>Other Ways to Reach Us
                    </h4>
                    <div class="row g-3">
                        <div class="col-md-3">
                            <div class="p-3">
                                <i class="fab fa-facebook fa-2x text-primary mb-2"></i>
                                <p class="mb-0">
                                    <a href="#" class="text-decoration-none">Facebook</a>
                                </p>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="p-3">
                                <i class="fab fa-twitter fa-2x text-info mb-2"></i>
                                <p class="mb-0">
                                    <a href="#" class="text-decoration-none">Twitter</a>
                                </p>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="p-3">
                                <i class="fab fa-linkedin fa-2x text-primary mb-2"></i>
                                <p class="mb-0">
                                    <a href="#" class="text-decoration-none">LinkedIn</a>
                                </p>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="p-3">
                                <i class="fas fa-comments fa-2x text-success mb-2"></i>
                                <p class="mb-0">
                                    <a href="#" class="text-decoration-none">Live Chat</a>
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .contact-item h5 {
        border-bottom: 2px solid #e9ecef;
        padding-bottom: 8px;
    }

    .card {
        transition: transform 0.2s;
    }

        .card:hover {
            transform: translateY(-2px);
        }

    .contact-item a:hover {
        color: var(--bs-primary) !important;
    }
</style>