@model IEnumerable<ABCRetails.Models.Product>
@{
    ViewData["Title"] = "Products";
}

<style>
    .product-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(320px, 1fr));
        gap: 1.5rem;
    }

    .product-item {
        background: var(--card-bg);
        border-radius: 20px;
        overflow: hidden;
        border: 1px solid var(--border-color);
        transition: all 0.3s ease;
        position: relative;
    }

        .product-item:hover {
            transform: translateY(-8px);
            box-shadow: 0 20px 40px rgba(99, 102, 241, 0.3);
            border-color: var(--primary-color);
        }

    .product-image {
        width: 100%;
        height: 200px;
        object-fit: cover;
        background: rgba(99, 102, 241, 0.1);
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .product-badge {
        position: absolute;
        top: 1rem;
        right: 1rem;
        padding: 0.5rem 1rem;
        border-radius: 50px;
        font-weight: 600;
        font-size: 0.875rem;
        backdrop-filter: blur(10px);
    }

    .product-content {
        padding: 1.5rem;
    }

    .product-id {
        font-family: 'Courier New', monospace;
        color: var(--text-secondary);
        font-size: 0.75rem;
        margin-bottom: 0.5rem;
    }

    .product-name {
        color: var(--text-primary);
        font-size: 1.25rem;
        font-weight: 700;
        margin-bottom: 0.75rem;
    }

    .product-description {
        color: var(--text-secondary);
        font-size: 0.9rem;
        margin-bottom: 1rem;
        line-height: 1.5;
        display: -webkit-box;
        -webkit-line-clamp: 2;
        -webkit-box-orient: vertical;
        overflow: hidden;
    }

    .product-price {
        font-size: 1.75rem;
        font-weight: 700;
        background: linear-gradient(135deg, var(--accent-color), #34d399);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
        margin-bottom: 1rem;
    }

    .product-actions {
        display: flex;
        gap: 0.5rem;
    }

    .btn-product-action {
        flex: 1;
        border-radius: 10px;
        padding: 0.6rem;
        border: none;
        font-weight: 600;
        transition: all 0.3s ease;
    }
</style>

<div class="page-header">
    <h2><i class="fas fa-box me-2"></i> Products</h2>
    <a asp-action="Create" class="btn btn-add btn-primary">
        <i class="fas fa-plus me-2"></i> Add New Product
    </a>
</div>

@if (Model.Any())
{
    <div class="product-grid">
        @foreach (var product in Model)
        {
            <div class="product-item">
                @if (!string.IsNullOrEmpty(product.ImageUrl))
                {
                    <img src="@product.ImageUrl" class="product-image" alt="@product.ProductName">
                }
                else
                {
                    <div class="product-image">
                        <i class="fas fa-image fa-3x" style="color: var(--text-secondary);"></i>
                    </div>
                }

                <div class="product-badge" style="background: @(product.StockAvailable > 10 ? "rgba(16, 185, 129, 0.2)" : product.StockAvailable > 0 ? "rgba(251, 191, 36, 0.2)" : "rgba(239, 68, 68, 0.2)"); color: @(product.StockAvailable > 10 ? "#10b981" : product.StockAvailable > 0 ? "#fbbf24" : "#ef4444");">
                    Stock: @product.StockAvailable
                </div>

                <div class="product-content">
                    <div class="product-id">ID: @product.ProductId.Substring(0, 8)...</div>
                    <h5 class="product-name">@product.ProductName</h5>
                    <p class="product-description">@product.Description</p>
                    <div class="product-price">@product.Price.ToString("C")</div>

                    <div class="btn-group btn-group-sm" role="group">
                        <a asp-action="Edit" asp-route-id="@product.RowKey"
                           class="btn btn-outline-primary" title="Edit">
                            <i class="fas fa-edit"></i>Edit
                        </a>
                        <form asp-action="Delete" method="post" class="d-inline">
                            <input type="hidden" name="id" value="@product.RowKey" />
                            <button type="submit" class="btn btn-outline-danger"
                                    title="Delete" onclick="return confirm('Are you sure you want to delete this customer?')">
                                <i class="fas fa-trash"></i>Delete
                            </button>
                        </form>
                    </div>
                </div>
            </div>
        }
    </div>
}
else
{
    <div class="alert alert-info text-center">
        <i class="fas fa-info-circle me-2"></i>No products found.
    </div>
}